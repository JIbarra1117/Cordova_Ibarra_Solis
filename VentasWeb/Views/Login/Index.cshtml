
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/estilos.css")
</head>
<body class="bg-info">

<main class="login-design">
    <div class="waves">
      
        <img src="@Url.Content("~/Imagenes/loginPerson.png")" alt="" >
    </div>
    <div class="login">
        <div class="login-data">
            <img src="@Url.Content("~/Imagenes/collab.png")" alt="" >
            <h1>Inicio de Sesion</h1>
            <form action="@Url.Content("~/Login/Index")" method="post" class="p-2">
                <div >
                    <mat-form-field class="input-fill">
                         <input class="form-control" type="email" name="correo" required="" autocomplete="off" placeholder="tucorreo@gmail.com">
                         </mat-form-field>
                </div>
                <div >
                    <mat-form-field  class="input-fill">
                         <input class="form-control" type="password" required="" name="clave" autocomplete="off" placeholder="***************">
                    </mat-form-field>
                </div>
                <div >
                     <button class="btn-login" type="submit">Iniciar Sesion</button>
                 </div>
             </form>
        </div>
        
    </div>
</main>
       






    
</body>
</html>
